<section>
    {{#each artists}}
        <h1>{{ this.name }}</h1>
            
            {{#if this.images}}
                <img src="{{this.images.0.url}}" alt="{{this.name}}">
            {{else}}
                <img src="https://user-images.githubusercontent.com/25275745/82283218-ba9ec200-9963-11ea-9fc8-8408b57bef12.png"
                    alt="{{this.name}}" style="width: 160px">
            {{/if}}
            
            {{!-- app.get('/albums/:artistId'....) --}}
            <a href="/albums/{{this.id}}">View albums</a> 
    {{/each}}
</section>